{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "storageAccountType": {
      "type": "array",
      "defaultValue": [ "Standard_LRS" ]
    },
    "storageAccountNamePrefix": {
      "type": "string",
      "defaultValue": "iaas3vms",
      "minLength": 1
    }

  },
  "variables": {

  },
  "resources": [
    {
      "name": "[concat(parameters('storageAccountNamePrefix'), copyIndex())]",
      "type": "Microsoft.Storage/storageAccounts",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-06-15",
      "copy": {
        "count": "[length(parameters('storageAccountType'))]",
        "name": "storageCopy"
      },
      "dependsOn": [],
      "tags": {
        "displayName": "[concat(parameters('storageAccountNamePrefix'), copyIndex())]"
      },
      "properties": {
        "accountType": "[parameters('storageAccountType')[copyIndex()]]"
      }
    }

  ],
  "outputs": {
  }
}
