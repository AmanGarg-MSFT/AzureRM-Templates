{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "spLoadBalancerName": {
      "type": "string"
    },
    "spPublicIPResourceId": {
      "type": "string"
    },
    "RDPNAT": {
      "type": "string"
    },
    "spHTTPNAT": {
      "type": "string"
    },
    "spHTTPSNAT": {
      "type": "string"
    },
    "spCANAT": {
      "type": "string"
    },
    "LBFE": {
      "type": "string"
    }
  },
  "variables": {
    "location": "[resourceGroup().location]",
    "spBackEndPoolName": "[concat(parameters('spLoadBalancerName'),'BEAP')]",
    "spFrontEndIPConfigName": "[concat(parameters('spLoadBalancerName'),'FEIP')]",
  },
  "resources": [
    {
      "apiVersion": "2015-06-15",
      "name": "[parameters('spLoadBalancerName')]",
      "type": "Microsoft.Network/loadBalancers",
      "location": "[variables('location')]",
      "properties": {
        "frontendIPConfigurations": [
          {
            "name": "[variables('spFrontEndIPConfigName')]",
            "properties": {
              "publicIPAddress": {
                "id": "[parameters('spPublicIPResourceId')]"
              }
            }
          }
        ],
        "backendAddressPools": [
          {
            "name": "[variables('spBackEndPoolName')]"
          }
        ],
        "inboundNatRules": [
          {
            "name": "[parameters('RDPNAT')]",
            "properties": {
              "frontendIPConfiguration": {
                "id": "[concat(resourceid(resourceGroup().name,'Microsoft.Network/loadBalancers',parameters('spLoadBalancerName')), '/frontendIPConfigurations/',parameters('LBFE'))]"
              },
              "protocol": "tcp",
              "frontendPort": 3389,
              "backendPort": 3389,
              "enableFloatingIP": false
            }
          },
          {
            "name": "[parameters('spHTTPNAT')]",
            "properties": {
              "frontendIPConfiguration": {
                "id": "[concat(resourceid(resourceGroup().name,'Microsoft.Network/loadBalancers',parameters('spLoadBalancerName')), '/frontendIPConfigurations/',parameters('LBFE'))]"
              },
              "protocol": "tcp",
              "frontendPort": 80,
              "backendPort": 80,
              "enableFloatingIP": false
            }
          },
          {
            "name": "[parameters('spHTTPSNAT')]",
            "properties": {
              "frontendIPConfiguration": {
                "id": "[concat(resourceid(resourceGroup().name,'Microsoft.Network/loadBalancers',parameters('spLoadBalancerName')), '/frontendIPConfigurations/',parameters('LBFE'))]"
              },
              "protocol": "tcp",
              "frontendPort": 443,
              "backendPort": 443,
              "enableFloatingIP": false
            }
          },
          {
            "name": "[parameters('spCANAT')]",
            "properties": {
              "frontendIPConfiguration": {
                "id": "[concat(resourceid(resourceGroup().name,'Microsoft.Network/loadBalancers',parameters('spLoadBalancerName')), '/frontendIPConfigurations/',parameters('LBFE'))]"
              },
              "protocol": "tcp",
              "frontendPort": 8080,
              "backendPort": 8080,
              "enableFloatingIP": false
            }
          }
        ]
      }
    }
  ]
}
