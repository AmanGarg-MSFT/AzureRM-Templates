      "type": "string"
    },
    "domainAdminPassword": {
      "type": "securestring"
    },
    "spSetupUsername": {
      "type": "string"
    },
    "vmNicPrefix": {
      "type": "string"
    },
    "vmNamePrefix": {
      "type": "string"
    },
    "numberWfe": {
      "type": "int"
    },
    "numberApp": {
      "type": "int"
    },
    "numberDCache": {
      "type": "int"
    },
    "numberSearchIndex": {
      "type": "int"
    },
    "numberSearchCrawl": {
      "type": "int"
    },
    "sizeWfeVm": {
      "type": "string"
    },
    "sizeAppVm": {
      "type": "string"
    },
    "sizeDCacheVm": {
      "type": "string"
    },
    "sizeSearchIndexVm": {
      "type": "string"
    },
    "sizeSearchCrawlVm": {
      "type": "string"
    },
    "sizeWfeDataDisk": {
      "type": "string"
    },
    "sizeAppDataDisk": {
      "type": "string"
    },
    "sizeDCacheDataDisk": {
      "type": "string"
    },
    "sizeSearchIndexDataDisk": {
      "type": "string"
    },
    "sizeSearchCrawlDataDisk": {
      "type": "string"
