{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "domainName": {
      "type": "string",
      "defaultValue": "contoso.local",
      "minLength": 1
    },
    "adminUserName": {
      "type": "string",
      "defaultValue": "yvand",
      "minLength": 1
    },
    "adminPassword": {
      "type": "securestring"
    },
    "adfsSvcUserName": {
      "type": "string",
      "defaultValue": "adfssvc",
      "minLength": 1
    },
    "adfsSvcPassword": {
      "type": "securestring"
    },
    "vmName": {
      "type": "string",
      "defaultValue": "DC",
      "minLength": 1
    },
    "updateTagVersion": {
      "type": "string",
      "defaultValue": "1.0",
      "metadata": {
        "description": "This value must be changed from a previous deployment to ensure the extension will run"
      }
    },
    "dscUrl": {
      "type": "string",
      "defaultValue": "https://github.com/Yvand/AzureRM-Templates/raw/master/SharePoint/SP16-ADFS/DSC/ConfigureDCVM.zip",
      "metadata": {
        "description": "DSC archive URL"
      }
    },
    "dscScript": {
      "type": "string",
      "defaultValue": "ConfigureDCVM.ps1",
      "metadata": {
        "description": "DSC script name"
      }
    },
    "dscFunction": {
      "type": "string",
      "defaultValue": "ConfigureDCVMStage2",
      "metadata": {
        "description": "DSC function name inside script"
      }
    }
  },
  "resources": [
    {
      "name": "[concat(parameters('vmName'),'/ConfigureDCVM')]",
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-06-15",
      "properties": {
        "publisher": "Microsoft.Powershell",
        "type": "DSC",
        "typeHandlerVersion": "2.9",
        "autoUpgradeMinorVersion": true,
        "forceUpdateTag": "[parameters('updateTagVersion')]",
        "settings": {
          "configuration": {
            "url": "[parameters('dscUrl')]",
            "script": "[parameters('dscScript')]",
            "function": "[parameters('dscFunction')]"
          },
          "configurationArguments": {
            "DomainName": "[parameters('domainName')]",
            "AdminCreds": {
              "UserName": "[parameters('adminUsername')]",
              "Password": "PrivateSettingsRef:adminPassword"
            },
            "AdfsSvcCreds": {
              "UserName": "[parameters('adfsSvcUserName')]",
              "Password": "PrivateSettingsRef:adfsSvcPassword"
            }
          },
          "privacy": {
            "dataCollection": "enable"
          }
        },
        "protectedSettings": {
          "adminPassword": "[parameters('adminPassword')]",
          "adfsSvcPassword": "[parameters('adfsSvcPassword')]"
        }
      }
    }
  ],
  "outputs": {
  }
}