{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string"
    },
    "domainName": {
      "type": "string"
    },
    "adminUserName": {
      "type": "string"
    },
    "adminPassword": {
      "type": "securestring"
    },
    "sqlSvcUserName": {
      "type": "string"
    },
    "sqlSvcPassword": {
      "type": "securestring"
    },
    "spSetupUserName": {
      "type": "string"
    },
    "spSetupPassword": {
      "type": "securestring"
    },
    "vmSQLName": {
      "type": "string"
    },
    "ConfigureSQLVMUpdateTagVersion": {
      "type": "string"
    },
    "dscUurl": {
      "type": "string"
    },
    "dscScript": {
      "type": "string"
    },
    "dscFunction": {
      "type": "string"
    }
  },
  "resources": [
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(parameters('vmSQLName'),'/ConfigureSQLVM')]",
      "location": "[parameters('location')]",
      "apiVersion": "2015-06-15",
      "properties": {
        "publisher": "Microsoft.Powershell",
        "type": "DSC",
        "typeHandlerVersion": "2.9",
        "autoUpgradeMinorVersion": true,
        "forceUpdateTag": "[parameters('ConfigureSQLVMUpdateTagVersion')]",
        "settings": {
          "configuration": {
            "url": "[parameters('dscUurl').url]",
            "script": "[parameters('dscScript').script]",
            "function": "[parameters('dscFunction').function]"
          },
          "configurationArguments": {
            "DomainName": "[parameters('domainName')]",
            "AdminCreds": {
              "UserName": "[parameters('adminUsername')]",
              "Password": "[parameters('adminPassword')]"
            },
            "SqlServerServiceAccountcreds": {
              "UserName": "[parameters('sqlSvcUserName')]",
              "Password": "[parameters('sqlSvcPassword')]"
            },
            "SharePointSetupUserAccountcreds": {
              "UserName": "[parameters('spSetupUserName')]",
              "Password": "[parameters('spSetupPassword')]"
            }
          }
        },
        "protectedSettings": {
        }
      }
    }
  ],
  "outputs": {
  }
}
