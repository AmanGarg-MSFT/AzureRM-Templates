{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "domainName": {
      "type": "string",
      "defaultValue": "contoso.local",
      "minLength": 1
    },
    "adminUserName": {
      "type": "string",
      "defaultValue": "yvand",
      "minLength": 1
    },
    "adminPassword": {
      "type": "securestring"
    },
    "sqlSvcUserName": {
      "type": "string",
      "defaultValue": "sqlsvc",
      "minLength": 1
    },
    "sqlSvcPassword": {
      "type": "securestring"
    },
    "spSetupUserName": {
      "type": "string",
      "defaultValue": "spsetup",
      "minLength": 1
    },
    "spSetupPassword": {
      "type": "securestring"
    },
    "vmSQLName": {
      "type": "string",
      "defaultValue": "SQL",
      "minLength": 1
    },
    "ConfigureSQLVMUpdateTagVersion": {
      "type": "string",
      "defaultValue": "1.0",
      "metadata": {
        "description": "This value must be changed from a previous deployment to ensure the extension will run"
      }
    },
    "dscUurl": {
      "type": "string",
      "defaultValue": "https://github.com/Yvand/AzureRM-Templates/raw/master/SharePoint/SP16-ADFS/DSC/ConfigureSQLVM.zip",
      "metadata": {
        "description": "DSC archive URL"
      }
    },
    "dscScript": {
      "type": "string",
      "defaultValue": "ConfigureSQLVM.ps1",
      "metadata": {
        "description": "DSC script name"
      }
    },
    "dscFunction": {
      "type": "string",
      "defaultValue": "ConfigureSQLVM",
      "metadata": {
        "description": "DSC function name inside script"
      }
    }
  },
  "variables": {
  },
  "resources": [
    {
      "name": "[concat(parameters('vmSQLName'),'/ConfigureSQLVM')]",
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-06-15",
      "tags": {
        "displayName": "[concat(parameters('vmSQLName'),'/ConfigureSQLVM')]"
      },
      "properties": {
        "publisher": "Microsoft.Powershell",
        "type": "DSC",
        "typeHandlerVersion": "2.9",
        "autoUpgradeMinorVersion": true,
        "forceUpdateTag": "[parameters('ConfigureSQLVMUpdateTagVersion')]",
        "settings": {
          "configuration": {
            "url": "[parameters('dscUurl').url]",
            "script": "[parameters('dscScript').script]",
            "function": "[parameters('dscFunction').function]"
          },
          "configurationArguments": {
            "DomainName": "[parameters('domainName')]",
            "AdminCreds": {
              "UserName": "[parameters('adminUsername')]",
              "Password": "[parameters('adminPassword')]"
            },
            "SqlServerServiceAccountcreds": {
              "UserName": "[parameters('sqlSvcUserName')]",
              "Password": "[parameters('sqlSvcPassword')]"
            },
            "SharePointSetupUserAccountcreds": {
              "UserName": "[parameters('spSetupUserName')]",
              "Password": "[parameters('spSetupPassword')]"
            }
          }
        },
        "protectedSettings": {
        }
      }
    }
  ],
  "outputs": {
  }
}
